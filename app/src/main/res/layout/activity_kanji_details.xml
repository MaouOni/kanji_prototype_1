<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- Toolbar at the top -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        app:title="Kanji Detalles"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar" />

    <!-- Kanji Details Content Below the Toolbar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/kanji_character"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="48sp"
            android:text="Kanji" />

        <TextView
            android:id="@+id/heisig_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Heisig"
            android:textSize="18sp"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/onyomi_reading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Onyomi"
            android:textSize="18sp"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/kunyomi_reading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kunyomi"
            android:textSize="18sp"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/meaning"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Meaning"
            android:textSize="18sp"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/example_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Example 1"
            android:textSize="18sp"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/example_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Example 2"
            android:textSize="18sp"
            android:layout_marginTop="8dp" />

        <!-- Placeholder for future stroke order GIF -->
        <ImageView
            android:id="@+id/stroke_order_gif"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="16dp"
            android:scaleType="centerInside"
            android:visibility="gone" />
    </LinearLayout>
</LinearLayout>
